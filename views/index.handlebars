  <div id="picture-sec" >
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-4 text-center" id="mypicture">
          <img src="images/{{user.picture.originalname}}" class="img-circle center-block">
          <h1>{{user.username}} </h1>
        </div>
        <div class="col-sm-6 col-md-4 text-center" style="padding-top:60px;">
          <h1> {{user.name}}</h1>
