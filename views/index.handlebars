              <i class='fa fa-envelope fa-2x contact'> </i>
            </div>
            <a href='mailto:{{user.email}}'>{{user.email}}</a > <br>
  
            <ul class="list-inline ">
              <li><a href="http://{{user.twitter}}"><i class="fa fa-github"></i></a></li>
            <li><a href="http://{{user.codepen}}"><i class="fa fa-twitter"></i></a> </li>
            <li><a href="http://{{user.linkedin}}"><i class="fa fa-linkedin"></i></a> </li>
            <li><a href="http://{{user.website}}" class='fa fa-globe'></a> </li> 
            </ul>
          </div>

        </div>
      </div>
    </div>
