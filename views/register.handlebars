<div class='form-field well center-block'>
  {{#if errors}} {{#each errors}}
  <div class="alert alert-danger">{{msg}}</div>
  {{/each}} {{/if}}
  <form method="post" action="/users/register" enctype="multipart/form-data">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" placeholder="Name" name="name" required>
      <br>
      <label>Username</label>
      <input type="text" class="form-control" placeholder="Username" name="username" required>
      <br>
      <label>Password</label>
      <input type="password" class="form-control" placeholder="Password" name="password" required>
      <br>
      <label>Confirm Password</label>
      <input type="password" class="form-control" placeholder="Password" name="password2" required>
      <br>
      <label>Email</label>
      <input type="email" class="form-control" placeholder="Email" name="email" required>
      <br>
      <label>Mobile Number</label>
      <input type="tel" class="form-control" placeholder="Enter your mobile number here.." name="mobile">
      <br>
      <label>Address</label>
      <input type="text" class="form-control" placeholder="Where are you located.." name="address">
      <br>
      <label>About you</label>
      <textarea id="" cols="80" rows="7" placeholder='enter some information about yourself' name='about'></textarea>
      <br>
      <label>What do you do?(Tools, Stack and Technologies)</label>
      <textarea id="" cols="80" rows="7" placeholder='Enter technologies and language(s) you work with...' name='skills'></textarea>
      <br>
      <label>Stack</label>
      <br>
      <input type="radio" value='Frontend' name='stack'> Frontend
      <input type='radio' value='Backend' name='stack'> Backend
      <input type='radio' value='Fullstack' name='stack'> Fullstack
      <input type='radio' value='Mobile' name='stack'> Mobile
      <input type='radio' value='MLAI' name='stack'> ML/AI
      <br>
      <label>Interests</label>
      <br/>
      <input type="text" value='{{user.interest1}}' class="form-control" placeholder="Enter an interest here" name="interest1">
      <input type="text" value='{{user.interest2}}' class="form-control" placeholder="Enter another interest here" name="interest2">
      <input type="text" value='{{user.interest3}}' class="form-control" placeholder="yet another interest." name="interest3">
      <br>
      <label>Github</label>
      <input type="text" class="form-control" placeholder="github.com/yourname" name="github" required>
      <br>
      <label>Twitter</label>
      <input type="text" class="form-control" placeholder="twitter.com/yourname" name="twitter">
      <br>
      <label>Codepen</label>
      <input type="text" class="form-control" placeholder="codepen.io/yourname" name="codepen">
      <br>
      <label>website</label>
      <input type="text" class="form-control" placeholder="Enter your website if any.. or an online link that tells more about you.."
        name="website">
      <br>
      <label>Upload picture</label>
      <input type='file' name="picture" required>
      <br>
      <button type="submit" class=" btn btn-success">Register</button>
      </div>
  </form>
  </div>